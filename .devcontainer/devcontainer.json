{
    "name": "Java Codespace",
    "image": "mcr.microsoft.com/devcontainers/java:21",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "none",
            "installMaven": "true"
        },
        "docker-in-docker": "latest"
    },  
    "customizations": {
      "vscode": {
        "extensions": [
          "vscjava.vscode-java-pack",
          "pivotal.vscode-spring-boot",
          "redhat.vscode-xml"
        ]
      }
    },
    "postCreateCommand": "mvn clean install" // For Maven; use 'gradle build' if you're using Gradle
  }
  